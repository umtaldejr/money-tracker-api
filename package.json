{
  "name": "money-tracker-api",
  "version": "1.0.0",
  "description": "A basic money tracker API built with Express",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:build": "docker build -t money-tracker-api .",
    "docker:build:dev": "docker build --target development -t money-tracker-api:dev .",
    "docker:build:prod": "docker build --target production -t money-tracker-api:prod .",
    "docker:run": "docker run -p 3000:3000 --env-file .env money-tracker-api",
    "docker:run:dev": "docker run -p 3000:3000 -v $(pwd):/usr/src/app money-tracker-api:dev",
    "docker:compose:up": "docker-compose up",
    "docker:compose:up:build": "docker-compose up --build",
    "docker:compose:down": "docker-compose down",
    "docker:compose:prod:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:compose:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:compose:prod:build": "docker-compose -f docker-compose.prod.yml up --build -d",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:prod": "docker-compose -f docker-compose.prod.yml logs -f",
    "docker:clean": "docker system prune -af && docker volume prune -f",
    "docker:shell": "docker exec -it money-tracker-api-dev /bin/sh",
    "docker:shell:prod": "docker exec -it money-tracker-api-prod /bin/sh"
  },
  "keywords": [
    "api",
    "express",
    "money-tracker",
    "nodejs",
    "rest-api",
    "docker",
    "containerized"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "jest": "^30.0.4",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.1"
  }
}
